<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".StartActivity"
    tools:layout_editor_absoluteX="15dp"
    tools:layout_editor_absoluteY="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Song or artist...">

        </SearchView>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="visible">

        </ListView>

        <HorizontalScrollView
            android:id="@+id/topicScrollView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewGrammar"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D6EAF8"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Grammar topics"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewPrep"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:background="#F9E79F"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Prepositions"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewPref"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#A2D9CE"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Verb prefixes"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewConj"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#D2B4DE"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Verb forms"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewPassive"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F5B7B1"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Passive"
                    android:textSize="30sp" />

            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/genreScrollView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="30dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewGenre"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#EC7063"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Genre"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewHipHop"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:background="#A569BD"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Hip-Hop"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewRock"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#45B39D"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Rock"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewPop"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#F4D03F"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Pop"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewSingSong"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#5DADE2"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Singer/Songwriter"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewElectronic"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#DC7633"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Electronic"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textViewMetal"
                    android:layout_width="383dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#52BE80"
                    android:gravity="center"
                    android:onClick="onClickTextView"
                    android:text="Metal"
                    android:textSize="30sp" />

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>